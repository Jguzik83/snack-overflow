<h1><%= @question.title %></h1>

<div class="container">
  <div class="question_main">
    <div class="votes question_votes">
      <div class="upvote"></div>
      <%= @question.votes_total %>
      <div class="downvote"></div>
    </div>
    <div class="question_content">
      <%= @question.content %>
      <ul>
        <% @question.tags.each do |tag| %>
          <li><%= tag.name %></li>
        <% end %>
      </ul>
    </div>
    <div>
      asked <%= @question.created_at %><br>
      <%= @question.user.username %>
    </div>
    <%= render partial: 'comments/question_comment_form', locals: {question: @question, comment: @comment} %>

    <div class="suggested_answers">
    <%= render @question.answers %>
    </div>

    <div class="new_answer">
      <h2>Submit an answer</h2>
      <%= render partial: "answers/form", locals: {question: @question} %>
    </div>
  </div>

  <%= render partial: "sidebar", locals: {question: @question} %></div>
